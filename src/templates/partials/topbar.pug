.top-bar.topbar
	.topbar-inner
		.container-fluid
			.topbar-wrapper
				.topbar-left.search-hide
					.btn.btn-white.btn-tobar__phone.btn-has-dropdown
						.topbar__phone
							a(href="#") (067) 888-88-88
							.btn-dropdown.topbar__phone-dropdown
								a(href="#") (067) 888-88-88
								a(href="#") (067) 888-88-88
						i.grf-up
					a(href="#").btn.btn-white.btn-icon
						i.grf-facebook
					a(href="#").btn.btn-white.btn-icon
						i.grf-instagram
				.topbar-logo.search-hide
					a(href="index.html")
						img(src="./img/logo.png", alt="")
				.topbar-right
					include search
					.btn.btn-white.btn-icon.btn-has-dropdown.btn-login(type="button" data-target='.mobile-login' data-classes='active' data-backdrop="true" data-overflow="true")
