						.btn-dropdown
							a(data-bs-toggle="modal" data-bs-target="#loginModal") Вход
							a(data-bs-toggle="modal" data-bs-target="#registerModal") Регистрация
							a(href="account-logged.html") Профиль
					button.btn.btn-white.btn-topbar__cart.d-block(type='button' data-bs-toggle='modal' data-bs-target='#cartModal')

						.topbar__cart
							span 3
							span.topbar__cart-text Корзина

					include mobileToggle

